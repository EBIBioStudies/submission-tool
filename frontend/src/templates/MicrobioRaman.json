{
  "name":"MicrobioRaman",
  "title":"MicrobioRaman",
  "description":"Microbiological Raman Spectroscopy Data",
  "sectionType":{
    "display":"required",
    "displayAnnotations":false,
    "tableGroups":[
      []
    ],
    "name":"Study",
    "fieldTypes":[
      {
        "name":"Title",
        "icon":"fa-heading",
        "controlType":{
          "name":"largetext",
          "placeholder":"Project title"
        },
        "display":"required",
        "asyncValueValidatorName":"forStudyTitle"
      },
      {
        "name":"ReleaseDate",
        "title":"Release Date",
        "icon":"fa-calendar-alt",
        "display":"required",
        "controlType":{
          "name":"date",
          "allowPast":false
        },
        "helpContextual":{
          "description":"Desired release date (GMT), for example, to ensure compliance with a publication embargo"
        }
      },
      {
        "name":"Description",
        "icon":"fa-comment",
        "controlType":{
          "name":"largetext",
          "placeholder":"Brief description of the project"
        }
      },
      {
        "name":"Software",
        "icon":"fa-briefcase",
        "controlType":{
          "name":"text",
          "placeholder":"If a commercial Raman system was used for measurement, the name and version of software"
        },
        "display":"optional"
      }
    ],
    "tableTypes":[
      {
        "name":"Contact",
        "icon":"fa-address-card",
        "description":"Add the contact details for the authors involved in the study.",
        "uniqueCols":true,
        "display":"required",
        "rowAsSection":true,
        "columnTypes":[
          {
            "name":"Name",
            "controlType":{
              "name":"text"
            },
            "display":"required",
            "required":true
          },
          {
            "name":"Organisation",
            "helpText":"Add org",
            "helpLink":"help#new-item-dropdown",
            "controlType":{
              "name":"org",
              "multiple":true
            },
            "display":"required",
            "required":true
          },
          {
            "name":"E-mail",
            "controlType":{
              "name":"text"
            },
            "display":"required",
            "required":true
          },
          {
            "name":"ORCID",
            "controlType":{
              "name":"orcid"
            },
            "display":"desirable"
          },
          {
            "name":"Role",
            "controlType":{
              "name":"select",
              "values":[
                "corresponding author",
                "data acquisition",
                "data analyst",
                "experiment performer",
                "first author",
                "investigator",
                "principal investigator",
                "software development",
                "submitter"
              ]
            },
            "display":"desirable"
          },
          {
            "name":"Address",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          },
          {
            "name":"Department",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          },
          {
            "name":"Funding",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          }
        ]
      },
      {
        "name":"Publication",
        "description":"Add the bibliography relevant to the study. Autofill is available when searching by <a target=\"_blank\" href=\"https://www.ncbi.nlm.nih.gov/pubmed/\">PubMed</a> identifier. For other IDs, you may use <a target=\"_blank\" href=\"https://www.ncbi.nlm.nih.gov/pmc/pmctopmid/#converter\">this converter</a>.",
        "icon":"fa-book",
        "display":"desirable",
        "uniqueCols":true,
        "columnTypes":[
          {
            "name":"PMID",
            "controlType":{
              "name":"pubmedid"
            },
            "display":"desirable"
          },
          {
            "name":"Authors",
            "controlType":{
              "name":"text"
            },
            "display":"required"
          },
          {
            "name":"Title",
            "controlType":{
              "name":"text"
            },
            "display":"required"
          },
          {
            "name":"Year",
            "controlType":{
              "name":"text"
            },
            "display":"required"
          },
          {
            "name":"Volume",
            "controlType":{
              "name":"text"
            },
            "display":"desirable"
          },
          {
            "name":"Issue",
            "controlType":{
              "name":"text"
            },
            "display":"desirable"
          },
          {
            "name":"Type",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          },
          {
            "name":"Issn",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          },
          {
            "name":"DOI",
            "controlType":{
              "name":"text"
            },
            "display":"optional"
          }
        ]
      },
      {
        "name":"File",
        "title":"Raw Data File",
        "icon":"fa-wave-square",
        "rowAsSection":true,
        "uniqueCols":true,
        "description":"Unprocessed raw Raman data (composed of wavenumbers and corresponding Raman intensities) and data labels; format as TSV, CSV or other universal file format",
        "display":"required",
        "columnTypes":[
          {
            "name":"File",
            "controlType":{
              "name":"file",
              "allowFolders":false
            },
            "display":"required"
          },
          {
            "name":"Type",
            "controlType":{
              "name":"text",
              "defaultValue":"Raw spectrum"
            },
            "display":"required"
          }
        ]
      }
    ],
    "sectionTypes":[
      {
        "display":"required",
        "displayAnnotations":false,
        "name":"Sample",
        "sectionExample":"The biological context and treatment",
        "fieldTypes":[
          {
            "name":"Name of cell or compound",
            "icon":"fa-file-invoice",
            "controlType":{
              "name":"text",
              "placeholder":"Sample names"
            },
            "display":"required"
          },
          {
            "name":"Source",
            "icon":"fa-vial",
            "controlType":{
              "name":"text",
              "placeholder":"Source of a sample, such as a strain collection, a chemical supplier, or the environment or tissue from which a sample was obtained"
            },
            "display":"required"
          },
          {
            "name":"Composition",
            "icon":"fa-cogs",
            "controlType":{
              "name":"largetext",
              "placeholder":"Entities contained in the sample, including not just the cells of interest, but also the medium, as well as any extraneous materials such as tissue, debris, biofilm matrix, or soil"
            },
            "display":"required"
          },
          {
            "name":"Preparation",
            "icon":"fa-temperature-low",
            "controlType":{
              "name":"largetext",
              "placeholder":"E.g., preservation after sampling, culturing condition (e.g., sample volume, medium, light condition/diel cycle, pH, temperature, antibiotics, oxic/anoxic), sample age, fixed or unfixed, whether the cells were dry or wet for Raman measurement"
            },
            "display":"required"
          },
          {
            "name":"Mounting substrate",
            "icon":"fa-layer-group",
            "controlType":{
              "name":"text",
              "placeholder":"E.g., glass coverslip, aluminum slide, CaF2 slide, quartz slide"
            },
            "display":"required"
          }
        ],
        "tableTypes":[
          {
            "name":"File",
            "title":"Image File",
            "display":"desirable",
            "description":"Image files from Raman imaging",
            "icon":"fa-file-image",
            "uniqueCols":true,
            "rowAsSection":true,
            "allowImport":true,
            "columnTypes":[
              {
                "name":"File",
                "controlType":{
                  "name":"file",
                  "allowFolders":false
                },
                "display":"required"
              },
              {
                "name":"Type",
                "controlType":{
                  "name":"text",
                  "defaultValue":"Image file"
                },
                "display":"required"
              }
            ]
          }
        ]
      },
      {
        "display":"required",
        "displayAnnotations":false,
        "name":"Setup",
        "sectionExample":"Experimental conditions",
        "fieldTypes":[
          {
            "name":"Raman system",
            "icon":"fa-microscope",
            "controlType":{
              "name":"text",
              "placeholder":"Manufacturer and model of the scope"
            },
            "display":"required"
          },
          {
            "name":"Measurement type",
            "icon":"fa-ruler-combined",
            "controlType":{
              "name":"select",
              "values":[
                "coherent anti-Stokes Raman scattering (CARS)",
                "hyper Raman scattering (HRS)",
                "normal Raman scattering",
                "polarized Raman spectroscopy",
                "resonance Raman scattering",
                "spatially offset Raman spectroscopy (SORS)",
                "stimulated Raman scattering (SRS)",
                "surface-enhanced Raman scattering (SERS)",
                "time-gated (TG) Raman spectroscopy",
                "tip-enhanced Raman scattering (TERS)"
              ]
            },
            "display":"required"
          }
        ],
        "tableTypes":[
          {
            "name":"Lasers and connected components/parameter",
            "display":"required",
            "description":"Wavelength of laser (nm), power of excitation laser (mW), neutral density filter (%) and other characteristics",
            "icon":"fa-grip-lines",
            "uniqueCols":true,
            "allowImport":true,
            "columnTypes":[
              {
                "name":"Description",
                "controlType":{
                  "name":"text"
                },
                "display":"desirable"
              },
              {
                "name":"Manufacturer and model",
                "controlType":{
                  "name":"text"
                },
                "display":"desirable"
              },
              {
                "name":"Wavelength (nm)",
                "controlType":{
                  "name":"text"
                },
                "display":"required"
              },
              {
                "name":"Power (mW)",
                "controlType":{
                  "name":"text"
                },
                "display":"required"
              },
              {
                "name":"Continuous wave or pulsed",
                "controlType":{
                  "name":"text",
                  "placeholder":"If pulsed, pulse duration and repetition rate"
                },
                "display":"required"
              },
              {
                "name":"Excitation intensity",
                "controlType":{
                  "name":"text",
                  "placeholder":"For nonlinear Raman spectroscopy (e.g., CARS/SRS)"
                },
                "display":"desirable"
              },
              {
                "name":"Polarization state",
                "controlType":{
                  "name":"text",
                  "placeholder":"For polarized Raman spectroscopy"
                },
                "display":"desirable"
              },
              {
                "name":"Laser spot shape",
                "controlType":{
                  "name":"select",
                  "values":[
                    "circular",
                    "elliptical",
                    "torus",
                    "square",
                    "rectangular"
                  ]
                },
                "display":"required"
              },
              {
                "name":"Laser illumination spot size",
                "controlType":{
                  "name":"text",
                  "placeholder":"E.g., diameter for a circular shape"
                },
                "display":"required"
              },
              {
                "name":"Neutral density filter (%)",
                "controlType":{
                  "name":"text",
                  "placeholder":"100% if not used"
                },
                "display":"required"
              },
              {
                "name":"Grating",
                "controlType":{
                  "name":"text",
                  "placeholder":"0 if not used"
                },
                "display":"required"
              },
              {
                "name":"Acquisition time (sec)",
                "display":"required",
                "controlType":{
                  "name":"text"
                }
              },
              {
                "name":"Accumulation number",
                "display":"required",
                "controlType":{
                  "name":"text",
                  "placeholder":"For averaging"
                }
              },
              {
                "name":"Spectral window (cm⁻¹)",
                "display":"required",
                "controlType":{
                  "name":"text"
                }
              },
              {
                "name":"Resolution (cm⁻¹)",
                "display":"required",
                "controlType":{
                  "name":"text"
                }
              }
            ]
          }
        ]
      },
      {
        "display":"desirable",
        "displayAnnotations":false,
        "minRequired":0,
        "name":"Treated spectrum",
        "sectionExample":"Data processing",
        "fieldTypes":[
          {
            "name":"Software",
            "icon":"fa-briefcase",
            "controlType":{
              "name":"text",
              "placeholder":"If manufacturer’s software was used for data processing, the name and version of software"
            },
            "display":"desirable"
          }
        ],
        "tableTypes":[
          {
            "name":"File",
            "title":"Processed Data File",
            "icon":"fa-wave-square",
            "display":"desirable",
            "rowAsSection":true,
            "uniqueCols":true,
            "columnTypes":[
              {
                "name":"File",
                "controlType":{
                  "name":"file",
                  "allowFolders":false
                },
                "display":"required"
              },
              {
                "name":"Type",
                "controlType":{
                  "name":"text",
                  "defaultValue":"Processed Raman data"
                },
                "display":"required"
              }
            ]
          },
          {
            "name":"Data treatments",
            "icon":"fa-list",
            "description":"List of computational algorithms and their parameters and sources used for data processing",
            "display":"desirable",
            "columnTypes":[
              {
                "name":"Treatment",
                "controlType":{
                  "name":"text",
                  "placeholder":"Treatment description"
                },
                "display":"required"
              }
            ]
          },
          {
            "name":"Software",
            "icon":"fa-comment",
            "controlType":{
              "name":"text",
              "placeholder":"If manufacturer’s software was used for data processing, the name and version of software."
            },
            "display":"optional"
          }
        ]
      },
      {
        "name":"Instrument metadata",
        "displayAnnotations":true,
        "minRequired":0,
        "icon":"fa-file-invoice",
        "sectionExample":"Additional instrument information that could help users to reproduce the measurements",
        "display":"desirable",
        "annotationsType":{
          "title":"Additional instrument details",
          "description":"Provide any additional details that could help users to reproduce the measurements. Select from the list, or add your own.",
          "icon":"fa-tag",
          "display":"desirable",
          "singleRow":true,
          "allowImport":false,
          "columnTypes":[
            {
              "name":"Type of spike filter",
              "controlType":{
                "name":"text"
              },
              "display":"optional"
            },
            {
              "name":"Detector specifications",
              "controlType":{
                "name":"text"
              },
              "display":"optional"
            },
            {
              "name":"Details of a microscope objective or a focusing lens",
              "controlType":{
                "name":"text"
              },
              "display":"optional"
            },
            {
              "name":"Confocality",
              "controlType":{
                "name":"text"
              },
              "display":"optional"
            },
            {
              "name":"Binning",
              "controlType":{
                "name":"text"
              },
              "display":"optional"
            }
          ]
        }
      }
    ]
  }
}
